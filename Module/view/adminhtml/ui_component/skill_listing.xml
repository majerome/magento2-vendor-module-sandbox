<?xml version="1.0"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">skill_listing.skill_listing_data_source</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New Skill</item>
                <item name="url" xsi:type="string">module/skill/new</item>
                <item name="class" xsi:type="string">primary</item>
            </item>
        </item>
    </argument>
    <settings>
        <spinner>skill_columns</spinner>
        <deps>
            <dep>skill_listing.skill_listing_data_source</dep>
        </deps>
        <buttons>
            <button name="open.skill_form_modal"
                    class="Vendor\Module\Block\Adminhtml\Skill\Index\Button\OpenSkillFormModal"/>
        </buttons>
    </settings>
    <modal name="skill_form_modal" component="Magento_Ui/js/modal/modal-component">
        <settings>
            <options>
                <option name="title" xsi:type="string">New Skill</option>
                <option name="type" xsi:type="string">popup</option>
                <option name="responsive" xsi:type="boolean">true</option>
                <option name="innerScroll" xsi:type="boolean">true</option>
            </options>
        </settings>
        <insertForm name="insert_skill_form">
            <settings>
                <updateUrl path="mui/index/render"/>
                <renderUrl path="mui/index/render_handle">
                    <param name="handle">insert_skill_form</param>
                    <param name="buttons">1</param>
                    <param name="header">0</param>
                </renderUrl>
                <realTimeLink>true</realTimeLink>
                <toolbarContainer>${ $.parentName }</toolbarContainer>
                <externalProvider>${ $.ns }.skill_form_data_source</externalProvider>
                <ns>skill_form</ns>
            </settings>
        </insertForm>
    </modal>
    <dataSource name="skill_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="indexField" xsi:type="string">skill_id</param>
            </storageConfig>
        </settings>
        <aclResource>Vendor_Module::skill</aclResource>
        <dataProvider name="skill_listing_data_source"
                      class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <requestFieldName>skill_id</requestFieldName>
                <primaryFieldName>skill_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <paging name="listing_paging"/>
        <columnsControls name="columns_controls"/>
        <bookmark name="bookmarks"/>
        <filters name="listing_filters"/>
        <filterSearch name="fulltext"/>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <settings>
                <selectProvider>
                    skill_listing.skill_listing.skill_columns.ids
                </selectProvider>
                <indexField>skill_id</indexField>
            </settings>
            <action name="delete">
                <settings>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                    <url path="*/*/massDelete"/>
                    <confirm>
                        <title translate="true">Delete items</title>
                        <message translate="true">Are you sure you want to delete the selected items?</message>
                    </confirm>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="skill_columns" class="Magento\Ui\Component\Listing\Columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">
                        skill_listing.skill_listing.skill_columns_editor
                    </item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="*/*/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="selectProvider" xsi:type="string">
                    skill_listing.skill_listing.skill_columns.ids
                </param>
                <param name="indexField" xsi:type="string">skill_id</param>
                <param name="enabled" xsi:type="boolean">true</param>
            </editorConfig>
        </settings>
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>skill_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="skill_id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
            </settings>
        </column>
        <column name="name" sortOrder="20">
            <settings>
                <label translate="true">Name</label>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                        <rule name="min_text_length" xsi:type="number">3</rule>
                        <rule name="max_text_length" xsi:type="number">30</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <actionsColumn name="actions"
                       class="Vendor\Module\Ui\Component\Skill\Listing\Column\Actions"
                       sortOrder="30">
        </actionsColumn>
    </columns>
</listing>
